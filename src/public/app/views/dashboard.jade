.row.mmwr-content
    .col.zero-padding-margin
        .main-content
            .row
                h3 Quick Stats
                .well(ui-view='mmwrCaseCharts')
                    | place holder for charts
            .row
                hr
            .row
                .col-lg-9.col-md-9.col-sm-8
                    h3 All Cases 
                .col-lg-3.col-md-3.col-sm-4
                    button.btn.btn-primary.ng-cloak.pull-right(type='button' ng-click="createCase('lg')") Create New Case
            .row
                .tab-container
                    tabset
                        tab(heading="Drafts")
                            br
                            .row
                                .col-lg-8.col-md-8.col-sm-8.col-xs-8
                                    h4 Draft Cases
                                .col-lg-4.col-md-4.col-sm-4.col-xs-4
                                    label.pull-right Filter: 
                                        select(ng-model='selectedFilter' ng-options='caseFilter.option as caseFilter.display for caseFilter in caseFilters' )
                            div(ng-repeat='case in draftCases | orderBy : selectedFilter')
                                .well(style='background-color:#ffffff;')
                                    .row
                                        .col-lg-1.col-md-1.col-sm-1
                                            label.pull-right
                                                i.fa.fa-file-text.fa-3x(style="color:#428bca")
                                        .col-md-3
                                            span.title-case(style="color:black")
                                                {{case.title}}  
                                                a(ui-sref='editDraft({caseID:case.case_id})')
                                                    span.teaser-title Edit/View
                                            br
                                            rating(ng-model='case.rating' max ='max' readOnly='isReadOnly' on-hover='hoveringOver(value)' on-leave='overStar = null')
                                        .col-md-3
                                            span.teaser-title(style="color:black") Published Date: 
                                            span.teaser-date
                                                {{case.publication_date | date}}
                                            br
                                            span.teaser-title(style="color:black") Last Edited:
                                            span.teaser-date
                                                {{case.last_edited | date}}
                                        .col-md-3
                                            a.del-edit-btn.btn.btn-default.btn-lg( href='', data-nodrag='', ng-click="delete(case)")
                                                .glyphicon.glyphicon-trash
                        tab(heading="Current")
                            br
                            .row
                                .col-lg-8.col-md-6.col-sm-6.col-xs-6
                                    h4 Current Case
                            div(ng-repeat='case in currentCases')
