.row.mmwr-content
    .button-cont
        .btn.btn-default.btn-circle.glyphicon.glyphicon-remove.pull-right(type='button' ng-click='exit()')
    .col.zero-padding-margin
        .main-content
            .row
                .col-lg-12
                    span.title-type The Case: 
                    span.title-case {{case.title}}
                    span.title-date {{case.publication_date | date}}
            .row
                .col-lg-12.col-md-12.col-sm-12
                    hr.line-margin
            .row
                .col-lg-12
                    p(ng-bind-html='case.case_text')
            .row
                .col-lg-12.col-md-12.col-sm-12
                    button.btn.btn-mmwr.btn-lg.pull-right.nav-button(type='button' ui-sref='test({caseID:case.case_id, testType:"pre"})')
                        | Next
                        span.glyphicon.glyphicon-chevron-right