.row.mmwr-content
	.col.zero-padding-margin
		.main-content
			.row
				.col-lg-12
					span.title-type Pre-test: 
					span.title-case {{case.title}}
					span.title-date {{case.publication_date | date}}
			.row
				.col-lg-12.col-md-12.col-sm-12
					hr(style='margin-bottom: 30px;')
			.row
				.col-lg-12
					p
						| {{case.QA[0].question.question}}
					br
					.well(ng-repeat='answers in case.QA[0].answers')
						.row
							.col-lg-1.col-md-1.col-sm-1.col-xs-2(align='center')
								label
									input(type='radio' name='radioGroup'+'{{answers.answer.id}}' value='radio')
							.col-lg-11.col-md-11.col-sm-11.col-xs-10
								{{answers.answer}}
			br
			.row
				.col-lg-12.col-md-12.col-sm-12(align='center')
					button.btn.btn-mmwr.btn-lg(type='button' style='width:150px;') Submit
