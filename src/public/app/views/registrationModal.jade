body
	.modal-header.header-background
		button.close(type='button' ng-click='cancel()')
			.fa.fa-times
		h4.modal-title Registration
	.modal-body
		.well
			form(ng-controller='loginCtrl')
				.form-group
					label First Name:
					input.form-control.input-lg(type='text' ng-model='firstName')
				.form-group
					label Last Name:
					input.form-control.input-lg(type='text' ng-model='lastName')
				.form-group
					input.form-control.input-lg(type='text' placeholder = 'Email' ng-model='email')
				.form-group
					input.form-control.input-lg(type='password' placeholder = 'Password' ng-model='password')
				//.form-group
					select.form-control.input-lg(type='text' placeholder = 'Select medical school attended' ng-options='medicalSchool in medicalSchools' ng-model='medSchool')
						option(value='-1') - Select Medical School  -
				button.btn.btn-primary.btn-lg(type='submit', style='width:100%;' ng-click="createLogin()") Register
