.left-content
    .row
        .col-lg-6.col-md-6
            .panel.panel-default
                .panel-heading
                    h3.panel-title Case of The Week Top 5 Users
                .panel-body
                    .table-responsive
                        table.table
                            tr
                                th User
                                th(style='text-align:center') Case(s) Taken
                                th(style='text-align:right') Score
                            tr(ng-repeat='leader in leaders')
                                td{{leader.user_name}}
                                td(style='text-align:center'){{leader.case_taken }}
                                td(style='text-align:right'){{leader.correct_percent | number:2 }}
                                    <span (ng-show='leader.correct_percent')>%</span>
        .col-lg-6.col-md-6
            .panel.panel-default
                .panel-heading
                    h3.panel-title Case of The Week Top 5 User Categories
                .panel-body
                    .table-responsive
                        table.table
                            tr
                                th Category
                                th(style='text-align:center') Case(s) Taken
                                th(style='text-align:right') Score
                            //tr(ng-repeat='leader in organizations')
                            tr(ng-repeat='leader in categories')
                                td{{leader.category}}
                                td(style='text-align:center'){{leader.case_taken }}
                                td(style='text-align:right') {{leader.correct_percent | number:2 }}
                                    <span (ng-show='leader.correct_percent')>%</span>
