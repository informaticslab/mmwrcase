.left-content
    .row
        .col-lg-6.col-md-6
            .panel.panel-default
                .panel-heading
                    h3.panel-title Case of The Week Top 5 Leaders
                .panel-body
                    .table-responsive
                        table.table
                            tr
                                th User
                                th Case(s) Taken
                                th Score
                            tr(ng-repeat='leader in leaders')
                                td{{leader.user_name}}
                                td{{leader.case_taken }}
                                td{{leader.correct_percent | number:2 }}%
        .col-lg-6.col-md-6
            .panel.panel-default
                .panel-heading
                    h3.panel-title Case of The Week Top 5 Organizations
                .panel-body
                    .table-responsive
                        table.table
                            tr
                                th Organization
                                th Case(s) Taken
                                th Score
                            tr(ng-repeat='leader in organizations')
                                td{{leader.user_name}}
                                td{{leader.case_taken }}
                                td{{leader.correct_percent | number:2 }}%
